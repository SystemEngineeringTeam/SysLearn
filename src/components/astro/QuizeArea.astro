---
const { quize, ans, kaisetu } = Astro.props;
---

<div class="quize-area">
  <h3>問題</h3>
  <p>{quize}</p>
</div>

<div class="ans-area">
  <input class="accordion-checkbox" id="accordion1" type="checkbox" />
  <label class="accordion-label" for="accordion1">
    <span class="accordion-title">答え</span>
    <span class="accordion-icon"></span>
  </label>

  <div class="accordion-content">
    <p>回答: {ans}</p>
    <p>{kaisetu}</p>
  </div>
</div>

<style>
  .quize-area {
  color: black;
  border: 1px solid rgb(137, 208, 243);
}

.quize-area h3 {
  background-color: rgb(143, 217, 254);
  color: white;
  text-align: center;
  border-bottom: 1px solid rgb(137, 208, 243);
}

.ans-area {
  border: 1px solid rgb(137, 208, 243);
}

.accordion-label {
  display: flex;
  align-items: center;
  justify-content: space-between;
  cursor: pointer;
  font-size: 18px;
  font-weight: bold;
  user-select: none;
  padding: 10px;
  background-color: rgb(143, 217, 254);
  color: white;
  width: 100%;
}

.accordion-checkbox {
  display: none;
}

.accordion-title {
  flex-grow: 1;
}

.accordion-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 24px;
  height: 24px;
  font-size: 30px;
  margin-left: 10px;
}

.accordion-icon::before {
  content: "+"; /* 初期状態は "+" */
  transition: transform 0.3s;
}

.accordion-checkbox:checked + .accordion-label .accordion-icon::before {
  content: "-";
}

.accordion-content {
  display: none;
  padding: 10px;
  background: #ffffff;
  margin-top: 5px;
}

.accordion-checkbox:checked ~ .accordion-content {
  display: block;
}

</style>
