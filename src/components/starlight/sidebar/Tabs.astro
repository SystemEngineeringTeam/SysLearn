---
import { Tabs as Default } from "@astrojs/starlight/components";
---

<div class="v-tabs" transition:persist>
  <Default {...Astro.props}>
    <slot />
  </Default>
</div>

<style>
  :global(:where(.v-tabs ul)[role=tablist]) {
    flex-direction: column;
    gap: 0.8rem;
    padding-block-end: 0.8rem;
    opacity: 0;
    animation: fadeIn 300ms ease forwards;
    animation-delay: 100ms;
  }

  :global(:where(.v-tabs a)[role=tab]) {
    border-bottom: none !important;
    padding-inline-start: 0.8em !important;
    border-left-width: 2px;
    border-left-style: solid;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
</style>
